@model CrudNet8MVC.Models.Contact
@{
    ViewData["Title"] = "Detail Contacto";
}

<h1 class="text-center">Contacto con .NET 8</h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Create" asp-controller="Index" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa-solid fa-plus"></i> Detail Usuario
        </a>
    </div>
</div>
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong>Detail Usuario</strong>
                </h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item">
                        <strong>Nombre: </strong>@Html.DisplayFor(m => m.Nombre)
                    </li>
                    <li class="list-group-item">
                        <strong>Nombre: </strong>@Html.DisplayFor(m => m.Telefono)
                    </li>
                    <li class="list-group-item">
                        <strong>Nombre: </strong>@Html.DisplayFor(m => m.Celular)
                    </li>
                    <li class="list-group-item">
                        <strong>Nombre: </strong>@Html.DisplayFor(m => m.Email)
                    </li>
                    <li class="list-group-item">
                        <strong>Nombre: </strong>@Html.DisplayFor(m => m.FechaCreacion)
                    </li>
                </ul>
                <a asp-controller="Index" asp-action="Index">
                    Volver
                </a>
            </div>
        </div>
    </div>
</div>