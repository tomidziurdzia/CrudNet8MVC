@model IEnumerable<CrudNet8MVC.Models.Contact>
@{
    ViewData["Title"] = "Lista de Contactos";
}

<h1 class="text-center">Contacto con .NET 8</h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Index" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa-solid fa-plus"></i> Nuevo Usuario
        </a>
    </div>
</div>
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong>Lista de Usuarios</strong>
                </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Id)</th>
                                <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                <th>@Html.DisplayNameFor(m => m.Celular)</th>
                                <th>@Html.DisplayNameFor(m => m.Email)</th>
                                <th>@Html.DisplayNameFor(m => m.FechaCreacion)</th>
                                <th>Acciones</th>
                            </tr>
                            <tbody>
                            @foreach (var contact in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => contact.Id)</td>
                                    <td>@Html.DisplayFor(m => contact.Nombre)</td>
                                    <td>@Html.DisplayFor(m => contact.Telefono)</td>
                                    <td>@Html.DisplayFor(m => contact.Celular)</td>
                                    <td>@Html.DisplayFor(m => contact.Email)</td>
                                    <td>@Html.DisplayFor(m => contact.FechaCreacion)</td>
                                    <td>
                                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@contact.Id">
                                            <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                                        </a>
                                        <a class="btn btn-secondary" asp-action="Detail" asp-route-id="@contact.Id">
                                            <i class="fa fa-info-circle" aria-hidden="true"></i> Detail
                                        </a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@contact.Id">
                                            <i class="fa fa-eraser" aria-hidden="true"></i> Delete
                                        </a>
                                    </td>
                                    
                                </tr>
                            }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>